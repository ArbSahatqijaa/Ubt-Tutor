        function toggleContent(newsItemId) {
            var additionalContent = document.getElementById("additional-content-" + newsItemId);
            if (additionalContent.style.display === "none") {
                additionalContent.style.display = "block";
            } else {
                additionalContent.style.display = "none";
            }
        }
    </script>

